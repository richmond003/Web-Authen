<%- include("partials/header.ejs") %>
        <!-- <div id="register-container"> -->
        <div id="signin-container">
            <h1>Sign Up</h1>
            <form id="register-form" action="/sign_up" method="POST">
                <div class="form-group">
                    <input type="text" name="fname" class="form-control" placeholder="First Name" required>
                </div>
                <div class="form-group">
                    <input type="text" name="lname" class="form-control" placeholder="Last Name" required>
                </div>
                <div class="form-group">
                    <input type="email" name="email" class="form-control" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <input type="password" name="password" id="password" class="form-control" placeholder="Password" required autocomplete="on">
                </div>
                <div class="form-group" id="mixmatch-msg">
                    <input type="password" name="verPassword" id="verPassword" class="form-control" placeholder="Confirm Password" required autocomplete="off">
                </div>
                <!-- Sign Up button -->
                <button type="submit" class="login-btn">SIGN UP</button>
                <div class="divider">
                    <span>Or Sign Up With</span>
                </div>
                <span id="OAuth"><a href="/auth/google"><i class="bi bi-google"></i></a></span>
            </form>
        </div>

        <div id="info-lable">
            <div id="login-container">
                <a href="/" id="btn-grid" class="btn">LOG IN</a>
            </div>
        </div>
<%- include("partials/footer.ejs") %>